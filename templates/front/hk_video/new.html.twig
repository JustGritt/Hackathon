{% extends 'front_base.html.twig' %}
{% block title %}New HkVideo!{% endblock %}

{% block body %}
 <section class="md:pl-[255px] lg:pl-[255px]">
    <div class="video-header">
        <a href="{{ path('front_app_hk_video_index') }}" class="profile-name text-4xl font-bold tracking-tight text-gray-900 text-left">
            <svg width="16" height="25" viewBox="0 0 16 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M14 2L3 13.8696L14 23" stroke="white" stroke-width="3"/>
            </svg>
        </a>
        <h2 class="video-header-title">
            Créer une vidéo
        </h2>

    </div>

    <main class="video flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-4">
        <section class="video-form w-full max-w-md space-y-8">

            {{ form_start(form) }}

            <div class="video-form-content">
                URL vidéo
                <div>
                {{ form_widget(form.link, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 sm:text-sm', 'placeholder': 'https://exemple.com'}} )}}
                {{ form_errors(form.link) }}
                </div>
            </div>

            <div class="video-form-content">
                Titre
                <div>
                {{ form_widget(form.title, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 sm:text-sm', 'placeholder': 'Titre de la vidéo'}} )}}
                {{ form_errors(form.title) }}
                </div>
            </div>

            <div class="video-form-content">
                Description
                <div>
                {{ form_widget(form.description, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 sm:text-sm', 'placeholder': 'A propos de la vidéo'}} )}}
                {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="cta-container mt-8">
                <button type="submit" class="cta cta-secondary">
                    Garder en brouillon
                </button>

                <button type="submit" class="cta cta-primary">
                    Soumettre à validation
                </button>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

</section>

{% endblock %}


