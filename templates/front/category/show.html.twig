{% extends 'front_base.html.twig' %}
{% block title %}TEAM SHOW!{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="product">
        {{category.name}}
        {{category.minAge}}
        {{category.maxAge}}
        {{category.isActive}}

        {% if app.user.roles[0] is same as("ROLE_ADMIN") %}
            <a href="{{ path('front_app_category_enable', {'id': category.id}) }}" class="text-indigo-600 hover:text-indigo-900">Activer la categorie</a>
        {% endif %}
    </div>

</div>
{% endblock %}
