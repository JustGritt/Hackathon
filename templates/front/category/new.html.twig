{% extends 'front_base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
    <section class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-4">
        <div class="w-full max-w-md space-y-8">
            <div>
                <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
                <h2 class="mt-6 text-4xl font-bold tracking-tight text-gray-900 text-left">
                    Ajouter une catégorie
                </h2>
                <p>lorem ipsum dolor</p>
            </div>

            {{ form_start(form) }}
            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                {{ form_widget(form.name, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12', 'placeholder': 'Nom de la catégorie'}} )}}
                {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                {{ form_widget(form.minAge, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12', 'placeholder': 'Âge minimum (min. 0)'}} )}}
                {{ form_errors(form.minAge) }}
                </div>
            </div>

            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                {{ form_widget(form.maxAge, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12', 'placeholder': 'Âge maximum (max. 100)'}} )}}
                {{ form_errors(form.maxAge) }}
                </div>
            </div>

            <div class="mt-8">
                <button type="submit" class="group relative flex w-full justify-center border border-transparent bg-indigo-600 py-2 px-4 h-12 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 items-center">
                Valider la catégorie
                <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                    <!-- Heroicon name: mini/lock-closed -->
                    <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                    </svg>
                </span>
                </button>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
