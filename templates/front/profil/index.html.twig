{% extends 'front_base.html.twig' %}

{% block title %}Profile{% endblock %}


{% block body %}
    <section class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-4">
        <div class="w-full max-w-md space-y-8">
            <div>
                <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
                <h2 class="mt-6 text-4xl font-bold tracking-tight text-gray-900 text-left">
                    Inscription
                </h2>
                <p>lorem ipsum dolor</p>
            </div>

            {{form_start(updateProfilForm)}}

			<div class="-space-y-px rounded-md shadow-sm">
				<div>
				{{ form_widget(updateProfilForm.firstname, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12', 'placeholder': 'Nom'}} )}}
				</div>
			</div>

			<div class="-space-y-px rounded-md shadow-sm">
				<div>
				{{ form_widget(updateProfilForm.lastname, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12', 'placeholder': 'Nom'}} )}}
				</div>
			</div>

			<div class="flex gap-5">
				<button
					class="mt-6 px-4 py-2 w-64 rounded-md text-center bg-emerald-600 text-white hover:bg-emerald-700">{{ button_label|default('save') | trans }}
				</button>
			</div>

			{{form_rest(updateProfilForm)}}
			{{form_end(updateProfilForm)}}

            <p class="text-center">Vous avez déjà un compte ? <a href="{{ path('front_app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500 text-align">Connectez-vous</a></p>
        </div>
    </section>
{% endblock %}