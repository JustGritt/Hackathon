{% extends 'front_base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <main class="register flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-4">
        <section class="w-full max-w-md space-y-8">
            <div>
                <h2 class="mt-6 text-4xl font-bold tracking-tight text-gray-900 text-left">
                    Inscription
                </h2>
                <p>Ajouter un utilisateur</p>
            </div>

            {{ form_start(registrationForm) }}
            <div class="-space-y-px rounded-md shadow-sm">
                <div>
                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12', 'placeholder': 'Nom'}} )}}
                {{ form_errors(registrationForm.firstname) }}
                </div>
            </div>

            <div class="-space-y-px rounded-md shadow-sm pt-2">
                <div>
                {{ form_widget(registrationForm.lastname, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 sm:text-sm', 'placeholder': 'Prénom'}} )}}
                {{ form_errors(registrationForm.lastname) }}
                </div>
            </div>

            <div class="-space-y-px rounded-md shadow-sm pt-2">
                <div>
                <label for="email-address" class="sr-only">Password</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 mb-2 sm:text-sm', 'placeholder': 'Email'}} )}}
                {{ form_errors(registrationForm.email) }}
                </div>
            </div>

            <div class="-space-y-px rounded-md shadow-sm pt-2">
                <div class="flex">
                <label for="bithdate" class="sr-only">Birthdate</label>
                {{ form_widget(registrationForm.bithdate.month, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 mb-2 sm:text-sm', 'placeholder': 'Mois'}} )}}
                {{ form_errors(registrationForm.bithdate.month) }}

                <label for="bithdate" class="sr-only">Birthdate</label>
                {{ form_widget(registrationForm.bithdate.day, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 mb-2 sm:text-sm', 'placeholder': 'Jour'}} )}}
                {{ form_errors(registrationForm.bithdate.day) }}

                <label for="bithdate" class="sr-only">Birthdate</label>
                {{ form_widget(registrationForm.bithdate.year, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 mb-2 sm:text-sm'}} )}}
                {{ form_errors(registrationForm.bithdate.year) }}
                </div>
            </div>

            <div class="-space-y-px rounded-md shadow-sm pt-2">
                <div>
                <label for="inputPassword" class="sr-only">Password</label>
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12', 'placeholder': 'Créer un mot de passe'}} )}}
                {{ form_errors(registrationForm.plainPassword.first) }}
                </div>
            </div>

            <div class="-space-y-px rounded-md shadow-sm pt-2">
                <div>
                <label for="ConfirmPassword" class="sr-only">Password</label>
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'relative block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 sm:text-sm mb-2 h-12 sm:text-sm', 'placeholder': 'Confirmer mot de passe'}} )}}
                {{ form_errors(registrationForm.plainPassword.second) }}
                </div>
            </div>

            <div class="mt-8">
                <button type="submit" class="group relative flex w-full justify-center border border-transparent bg-indigo-600 py-2 px-4 h-12 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 items-center">
                Valider Inscription
                <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                    <!-- Heroicon name: mini/lock-closed -->
                    <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                    </svg>
                </span>
                </button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
